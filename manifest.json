{ 
  "manifest_version": 2,

  "name"        : "新浪微博时区助手 weiboTimezone Extension",
  "version"     : "0.1.2",
  "description" : "以所在时区显示微博发布的时间。Show timestamps at Weibo.com according to your local timezone. ",
  
  "browser_action": {
    "default_icon": "share/icon.png",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "persistent":true,
    "page":"background/background.html"
  },

  "content_scripts": [
    {
      "matches": ["http://www.weibo.com/*", "http://www.ghouan.info/*"],
      "css": ["logic/test.css"],
      "js": ["share/moment-with-locales.min.js", "share/moment-timezone-with-data-2010-2020.min.js", "logic/test.js"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "tabs",
    "<all_urls>"
  ]
} 

